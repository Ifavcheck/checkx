<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHomePage"
    android:background="@color/homePageColor">

    <TextView
        android:id="@+id/lbHeading"
        style="@style/heading_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="12dp"
        android:text="@string/home_page_heading" />

    <Button
        android:id="@+id/btnAroundMe"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="91dp"
        android:text="@string/parking_around_me" />

    <Button
        android:id="@+id/btnAtDestination"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnAroundMe"
        android:layout_marginEnd="17dp"
        android:text="@string/parking_at_destination" />

</RelativeLayout>